<h1>Signup</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user, url: signup_path) do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name %>

            <%= f.label :tag %>
            <%= f.text_field :tag %>

            <%= f.submit "Create account", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
<%= link_to 'Back', root_path %>
