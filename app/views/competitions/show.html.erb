<p id="notice"><%= notice %></p>

<center>
    
<h1>
  <%= @competition.name %>
</h1>

<p>
  <strong>Start:</strong>
  <%= @competition.start %>
  <strong>End:</strong>
  <%= @competition.end %>
</p>

<table class="pure-table pure-table-bordered">
  <thead>
    <tr>
      <th> Id </th>
      <th> Name </th>
      <th> Description </th>
      <th> Points </th>
      <th> Link </th>
      <th> solved </th>
      <th> GoTo </th>
    </tr>
  </thead>
  <tbody>
<% @competition.problems.each do |problem| %>
  <tr>
    <td><%= problem.id %> </td>
    <td><%= problem.name %></td>
    <td><%= problem.description %></td>
    <td><%= problem.points %></td>
    <td><%= problem.link %> </td>
    <td><%= "yes" if !Solution.where(problem: problem).where(user: current_user).where(validity: true).blank?%></td>
    <td><%= link_to 'Show', problem_path(problem) %></td>
  </tr>
<%end%>
  </tbody>
</table>
</center>
<% if is_admin? %>
  <%= link_to 'Edit', edit_competition_path(@competition) %> |
<% end %>
<%= link_to 'Back', competitions_path %>
