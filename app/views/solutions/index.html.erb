<p id="notice"><%= notice %></p>

<h1>Solutions</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Problem</th>
      <th>Language</th>
      <th>Code</th>
      <th>Validity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @solutions.each do |solution| %>
      <tr>
        <td><%= solution.user.tag %></td>
        <td><%= solution.problem.name %> <%=link_to 'goto', problem_path(solution.problem) %></td>
        <td><%= solution.language %></td>
        <td><%= solution.code %></td>
        <td><%= solution.validity %></td>
        <td><%= link_to 'Show', solution %></td>
        <td><%= link_to 'Edit', edit_solution_path(solution) %></td>
        <td><%= link_to 'Destroy', solution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Solution', new_solution_path %>
