<div class="main-div">
<h1><%= @problem.name %></h1>
<p><%= @problem.description %></p>


<div class="row">
  <div class="col-md-6">
    <%= form_for(@solution) do |f| %>
      <%= f.hidden_field :problem_id, :value => @problem.id %>
      <br>
      <%= f.label :language %>
      <%= f.select :language, options_for_select(["python", "c", "javascript", "ruby", "haskell"]) %>
      <br>
      <%= f.label :code %>
      <%= f.text_area :code %>
      <br>
      <%= f.submit "Submit", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
<%= link_to 'Back', solutions_path %>
</div>
