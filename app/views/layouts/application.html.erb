<!DOCTYPE html>
<html>
  <head>
    <title>CodeJamV2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to 'Home', root_path %> 
    <% if logged_in? %> <%= 'Welcome ' + cookies[:user_tag] %> <% end %>
    <% flash.each do |message_type, message| %>
      <%= content_tag(:div, message, class: "alert alert-#{message_type} alert-dismissible fade in") %>
    <% end %>
    <%= yield %>
  </body>
</html>
